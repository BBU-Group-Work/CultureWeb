@* @model CultureWeb.Models.Purchase *@
@model List<Products>
@using CultureWeb.Models;
@using CultureWeb.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = @localizer["Purchase Create"];
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <div class="pt-title ">
        <p class="fs-6"><a asp-action="Index" class="fs-5 text-danger">@localizer["Purchase List"]</a> <i class="fa-solid fa-chevron-right"></i> @localizer["Purchase Create"]</p>
    </div>
</div>
<div class="row mt-5">
    <div class="col-lg-8">      
        <form asp-action="Create" method="post" class="mb-3 row justify-content-center d-flex" enctype="multipart/form-data">
            <div class="col-6 mb-3">
                @if (CultureInfo.CurrentUICulture.Name == "en")
                {
                    <label for="supplierId" class="form-label">Supplier</label>
                    <select class="form-select" id="supplierId" name="supplierId" required>
                        <option disabled selected>@localizer["Select Supplier"]</option>
                        @foreach (var supplier in ViewBag.Suppliers)
                        {
                            <option value="@supplier.Id">@supplier.SupplierName</option>
                        }
                    </select>
                }
                else if (CultureInfo.CurrentUICulture.Name == "km")
                {
                    <label for="supplierId" class="form-label">Supplier</label>
                    <select class="form-select" id="supplierId" name="supplierId" required>
                        <option disabled selected>@localizer["Select Supplier"]</option>
                        @foreach (var supplier in ViewBag.Suppliers)
                        {
                            <option value="@supplier.Id">@supplier.SupplierName_kh</option>
                        }
                    </select>
                }
            </div>
            <h4>Purchase Details</h4>
            @if (Model.Count > 0)
            {
                <table class="table table-responsive-sm align-middle">
                    <thead class="bg-gray">
                        <tr>
                            <th>@localizer["Product"]</th>
                            <th>@localizer["Price"]</th>
                            <th>@localizer["Quantity"]</th>
                            <th>@localizer["SubTotal"]</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {                           
                            <tr class="align-middle">
                                <input type="hidden" name="productId" value="@item.Id" />
                                <td>
                                    <span>
                                        <a asp-action="Details" asp-route-id="@item.Id">
                                            <img src="~/@item.Image" alt="" style="width: 55px; height: 55px" class="rounded-3 object-fit" />
                                        </a>
                                    </span>
                                    <span class="text-black fs-6 fw-bolder mx-3">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="text-black fs-6 fw-bolder mx-3">
                                            @switch (CultureInfo.CurrentUICulture.Name)
                                            {
                                                case "en":
                                                    @item.Name
                                                    break;
                                                case "km":
                                                    @item.Name_kh
                                                    break;
                                                default:
                                                    @item.Name
                                                    break;
                                            }
                                        </a>
                                    </span>
                                </td>
                                <td>
                                    <span class="text-success">
                                        <i class="fa-solid fa-dollar-sign"></i>@item.Price
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex flex-row">
                                       
                                        <div class="d-flex flex-row border-1 rounded-2" style="border: 1px solid black; ">
                                            <button type="button" class="btn btn-link px-2 text-dark"
                                                    onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                                <i class="fas fa-minus"></i>
                                            </button>

                                            <input min="1" name="quantity" value="1" type="number"
                                                   class="form-control text-center border-none quantity focus-none bg-white" style="width: 60px;"  />

                                            <button type="button" class="btn btn-link px-2 text-dark"
                                                    onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>


                                </td>
                                <td>
                                    <span class="text-success">
                                        <i class="fa-solid fa-dollar-sign"></i>@(item.Price * item.Qty)
                                    </span>
                                </td>
                                <td>
                                    <span>
                                        <form asp-action="RemoveAll" method="post" enctype="multipart/form-data">
                                            <input type="hidden" name="productId" value="@item.Id" />
                                            <button type="submit" class="btn-close close" asp-action="RemoveAll" asp-route-id="@item.Id" title="@localizer["Remove from Purchase"]"></button>
                                        </form>
                                    </span>
                                </td>
                            </tr>

                        }
                    </tbody>

                    <tfoot>
                    </tfoot>
                </table>
            }
             
            else
            {
            <div class="row">
                <div class="col-12 pb-5" style="display: flex; justify-content: center; align-items: center">
                    <img src="https://cdn.dribbble.com/users/1121009/screenshots/11030107/media/25be2b86a12dbfd8da02db4cfcbfe50a.jpg?compress=1&resize=1000x750" width="500px" />
                </div>
            </div>
            }
            <div class="text-end">
                <button type="submit" class="btn btn-primary text-end">Create</button>
            </div>
            
        </form>
    </div>
    <div class="col-lg-4 bg-white rounded-1 p-3">
        @foreach (var product in ViewBag.Products)
        {
            <div class="d-flex justify-content-between mt-2">
                <div class="d-flex">

                    <img src="~/@product.Image" asp-append-version="true" alt="" class="img-fluid" style="width: 50px; height: 50px; border-radius: 5px; object-fit: cover;">
                                  
                    <span class="fs-7 mx-3 d-flex flex-column">
                        
                        <span class="fs-7 mx-3">
                            @if (CultureInfo.CurrentUICulture.Name == "en")
                            {
                                @product.Name
                            }
                            else if (CultureInfo.CurrentUICulture.Name == "km")
                            {
                                @product.Name_kh
                            }
                        </span>
                        <span class="fs-7 mx-3 text-success">                           
                                $@product.Price    
                                <span class="text-secondary mx-3">Quantities : @product.Qty</span>                     
                        </span>
                    </span>
                </div>

                <div>
                    <form asp-action="AddToPurchase" method="post" enctype="multipart/form-data" class="d-flex">
                        <div asp-validation-summary="ModelOnly" class="text-danger">
                        </div>
                        <input type="hidden" name="id" value="@product.Id" />
                        @if (ViewBag.ProductInPurchase != null)
                        {
                            
                            <button type="submit" class="btn btn-sm btn-danger px-3" asp-action="RemoveAll" asp-route-id="@product.Id"> @localizer["Remove"]</button>
                        }
                        else
                        {
                           
                            <button type="submit" class="btn btn-sm btn-dark px-3 mx-2">@localizer["Add"]</button>
                        }
                    </form>
                </div>
            </div>
          
                          
        }
    </div>
</div>

