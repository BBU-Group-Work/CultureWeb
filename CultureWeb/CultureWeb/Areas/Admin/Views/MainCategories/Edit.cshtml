@model CultureWeb.Models.MainCategory
@{
    ViewData["Title"] = @localizer["Category Edit"];
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <div class="pt-title ">
        <p class="fs-6"><a asp-action="Index" class="fs-5 text-danger">@localizer["Main Category"]</a> <i class="fa-solid fa-chevron-right"></i> @localizer["Category Edit"]</p>
    </div>

</div>

<!-- Content Row -->
<div class="row">
    <div class="col-12  d-flex justify-content-center ">
        <form asp-action="Edit" class="row ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="mt-3 col-lg-12">
                <label asp-for="Name" class="control-label">@localizer["Main Category Title"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mt-3 col-lg-12">
                <label asp-for="Description" class="control-label">@localizer["Description"]</label>
                <textarea asp-for="Description" cols="20" rows="5" class="form-control "></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mt-3 col-lg-12">
                <label asp-for="Name_kh" class="control-label">@localizer["Main Category Title​ Khmer"]</label>
                <input asp-for="Name_kh" class="form-control" />
                <span asp-validation-for="Name_kh" class="text-danger"></span>
            </div>
            <div class="mt-3 col-lg-12">
                <label asp-for="Description_kh" class="control-label">@localizer["Description Khmer"]</label>
                <textarea asp-for="Description_kh" cols="20" rows="5" class="form-control "></textarea>
                <span asp-validation-for="Description_kh" class="text-danger"></span>
            </div>
            <div class=" mt-3 d-flex justify-content-between">
                <div class="pt-options ">
                    <a asp-action="Index" class="btn btn-danger mx-2"> @localizer["Back"] </a>
                </div>
                <div class="">
                    <button type="submit" value="Create" class="btn btn-dark form-control float-sm-end px-4">@localizer["Update"]</button>
                </div>

            </div>
        </form>


    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

