@model CultureWeb.Models.Order
@{
    ViewData["Title"] = @localizer["Order Details"];
   
}

@using CultureWeb.Models;
@using CultureWeb.Utility;
@using Microsoft.AspNetCore.Http
@using System.Security.Claims;
@inject IViewLocalizer localizer
@inject IHttpContextAccessor HttpContextAccessor
@inject UserManager<IdentityUser> UserManager
@{
    // // Get the user's details
    var user = await UserManager.GetUserAsync(User) as ApplicationUser;
}
@{
    //var userRole = HttpContextAccessor.HttpContext.Session.GetString("roleName");
    int count = 0;
    List<Products> products = HttpContextAccessor.HttpContext.Session.Get<List<Products>>("products");
    if (products == null)
    {
        products = new List<Products>();
    }
    count = products.Count();

}


<div class="bg-main bg-light">
    <div class="container">
        <div class="box py-5 d-flex justify-content-between">
            <div class="breadcumb nav-link mt-2">
                <a asp-action="Index" asp-controller="Home" class="text-decoration-none text-dark mx-3">@localizer["Home"]</a>
                <span><i class="fa-solid fa-chevron-right"></i></span>
                <a ahref="#" class="text-decoration-none text-dark mx-3">@localizer["Profile"]</a>

            </div>
            <div class="breadcumb nav-link d-flex">
                <a class="nav-link mt-2" asp-area="Customer" asp-controller="Home" asp-action="Cart" title="@localizer["Cart"]">
                    <i class="fa-solid fa-bag-shopping"></i>
                    (@count)
                </a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a id="login" asp-area="Identity" asp-page="/Account/Login" class="nav-link mt-2 mx-3"><i class="fa fa-heart"></i>(0)</a>
                }
                else
                {
                    <a asp-area="Customer" asp-controller="Home" asp-action="FavoriteProduct" class="nav-link mt-2 mx-3" title="@localizer["Favorite"]"><i class="fa fa-heart"></i> (@ViewBag.FavoriteProductCount)</a>
                }

                <a href="#" class="text-decoration-none text-dark mx-3 nav-link">
                    @{
                        var culture = Context.Features.Get<IRequestCultureFeature>();
                        var cultureList = locOptions.Value.SupportedUICultures.Select(x => new SelectListItem { Value = x.Name, Text = localizer.GetString(x.Name) }).ToList();
                        var returnUrl = string.IsNullOrWhiteSpace(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}{Context.Request.QueryString}";
                    }

                    <form method="post" asp-area="Customer" asp-action="ChangeLanguage" asp-controller="Home" asp-route-returnUrl="@returnUrl">
                        <select class="form-select bg-light border-none " name="culture" asp-for="@culture.RequestCulture.UICulture.Name" asp-items="cultureList" onchange="this.form.submit();">
                        </select>
                    </form>
                </a>
                <div class="dropdown no-arrow">
                    <a class="nav-link " href="#" id="userDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @*   <span class="mr-2 d-none d-lg-inline text-gray-600 small">@user.UserName</span> *@
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (user.Image != null)
                            {
                                <img src="@($"~/Images/User/{user.Image}")" asp-append-version="true" class="img-profile rounded-circle objit-cover" width="40px" height="40px" style="object-fit:cover;" />
                            }
                            else
                            {
                                <img src="~/Images/user.jpg" class="img-profile rounded-circle" width="40px" height="40px" />
                            }

                        }
                        else
                        {

                            <img src="~/Images/user.jpg" class="img-profile rounded-circle" width="40px" height="40px" />

                        }

                    </a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Dropdown - User Information -->
                        <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                             aria-labelledby="userDropdown">
                            <a class="dropdown-item" asp-area="Customer" asp-controller="Profiles" asp-action="Profile">
                                <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                @localizer["Profile"]
                            </a>


                            <div class="dropdown-divider"></div>

                            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button id="logout" type="submit" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    @localizer["Logout"]
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                             aria-labelledby="userDropdown">
                            <a class="dropdown-item" id="register" asp-area="Identity" asp-page="/Account/Register">
                                <i class="fa-solid fa-user-plus fa-sm fa-fw mr-2 text-gray-400"></i>
                                @localizer["Register"]
                            </a>
                            @*  <a class="dropdown-item" href="#">
                        <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                        @localizer["Settings"]
                        </a> *@

                            <div class="dropdown-divider"></div>

                            <a class="dropdown-item" id="register" asp-area="Identity" asp-page="/Account/Register">
                                <i class="fas fa-sign-in-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                @localizer["Login"]
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mb-3">

                <div class="bg-gray rounded-3 pt-4 row">
                    <div class="d-flex   pb-4 col-lg-4">
                        <span class="text-black mx-3 fw-bolder">@localizer["Order No"] :<i class="fw-normal">  @Html.DisplayFor(model => model.OrderNo)</i></span>
                    </div>

                    <div class="d-flex   pb-4 col-lg-4">
                        <span class="text-black mx-3 fw-bolder">@localizer["Customer Name"] :<i class="text-black fw-normal">  @Html.DisplayFor(model => model.Name)</i></span>
                    </div>

                    <div class="d-flex   pb-4 col-lg-4">
                        <span class="text-black mx-3 fw-bolder">@localizer["Phone"] :<i class="text-black fw-normal">  @Html.DisplayFor(model => model.PhoneNo)</i></span>
                    </div>
                    <div class="d-flex   pb-4 col-lg-4">
                        <span class="text-black mx-3 fw-bolder">@localizer["Email"] :<i class="fw-normal">  @Html.DisplayFor(model => model.Email)</i></span>
                    </div>
                    <div class="d-flex   pb-4 col-lg-4 fw-bolder">
                        <span class="text-black mx-3">@localizer["Address"] :<i class="fw-normal">  @Html.DisplayFor(model => model.Address)</i></span>
                    </div>
                    <div class="d-flex   pb-4 col-lg-4">
                        <span class="text-black mx-3 fw-bolder">@localizer["Order Date"] :<i class="fw-normal">  @Html.DisplayFor(model => model.OrderDate)</i></span>
                    </div>

                    <div class="d-flex   pb-4 col-lg-4">
                        <span class="text-black mx-3 fw-bolder">@localizer["Country/Region"] :<i class="fw-normal"> @localizer["Cambodia"]</i></span>
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h5>@localizer["Product Ordered"]</h5>
            </div>
            <div class="col-12">

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>@localizer["Product Name"]</th>
                            <th>@localizer["Price"]</th>
                            <th>@localizer["Quantity"]</th>
                            <th>@localizer["SubTotal"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderDetails)
                        {
                            <tr>
                                <td class="d-flex">
                                    <div class="pr-2" style="width: 60px;">
                                        <img src="~/@item.Product.Image" style="max-height: 60px; max-width: 60px" />
                                    </div>
                                    <div class="col my-auto" style="height: fit-content">
                                        @switch (CultureInfo.CurrentUICulture.Name)
                                        {
                                            case "en":
                                                @($"{item.Product.Name}")
                                                break;
                                            case "km":
                                                @($"{item.Product.Name_kh}")
                                                break;
                                            default:
                                                @($"{item.Product.Name}")
                                                break;
                                        }

                                    </div>
                                </td>
                                <td style="vertical-align: baseline;">
                                    $@item.Product.Price
                                </td>
                                <td style="vertical-align: baseline;">
                                    @item.QtyOrder
                                </td>
                                <td style="vertical-align: baseline;">
                                    $@(item.Product.Price * item.QtyOrder)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div class="col-12">
                <div class="col-5"></div>
                <div class="col-7 col-md-12">
                    <div class="text-end">
                        <h5>@localizer["Total Amount"] :  <span class="text-success fw-bolder h5"> $@Model.OrderDetails.Sum(c=>c.Product.Price*c.QtyOrder)</span></h5>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- Content Row -->
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}

